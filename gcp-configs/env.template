# GCP Deployment Configuration
# Copy this file to .env.gcp in project root and fill in your values

# ============================================
# GCP PROJECT SETTINGS (REQUIRED)
# ============================================
# Your GCP project ID
GCP_PROJECT_ID=your-project-id

# GCP region (e.g., us-central1, us-east1, europe-west1)
GCP_REGION=us-central1

# ============================================
# ELASTICSEARCH SETTINGS (REQUIRED)
# ============================================
# Option 1: Elastic Cloud (Recommended)
# Sign up at: https://cloud.elastic.co/
# Example: https://your-deployment.es.us-central1.gcp.cloud.es.io:9243
ELASTICSEARCH_URL=https://your-elastic-cloud-url:9243

# Elasticsearch password (will be stored in Secret Manager)
ELASTICSEARCH_PASSWORD=your-elastic-password

# Elasticsearch username (usually 'elastic')
ELASTICSEARCH_USERNAME=elastic

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
# Use Terraform for infrastructure (true/false)
USE_TERRAFORM=false

# URLs to scrape for knowledge base
SCRAPE_URLS=https://docs.python.org/3/tutorial/,https://fastapi.tiangolo.com/

# Allow unauthenticated access (set to false for production)
ALLOW_UNAUTHENTICATED=true

# ============================================
# VERTEX AI SETTINGS
# ============================================
VERTEX_LLM_MODEL=gemini-1.5-flash
VERTEX_EMBEDDING_MODEL=text-embedding-004

