# Local Development Environment Variables
# To use: cp env.local.template .env (or source this file)

# ============================================
# ELASTICSEARCH SETTINGS
# ============================================
export ELASTICSEARCH_URL=http://localhost:9200
export ELASTICSEARCH_USERNAME=
export ELASTICSEARCH_PASSWORD=

# ============================================
# LLM & EMBEDDING PROVIDERS
# ============================================
# Options: local, vertex, azure
export EMBEDDING_PROVIDER=local
export LLM_PROVIDER=local

# ============================================
# OLLAMA SETTINGS (for local LLM)
# ============================================
# Use localhost when running natively, host.docker.internal when in Docker
export OLLAMA_URL=http://localhost:11434

# ============================================
# VERTEX AI SETTINGS (for GCP deployments)
# ============================================
export GOOGLE_PROJECT_ID=your-project-id
export GOOGLE_REGION=us-central1

# ============================================
# API SETTINGS
# ============================================
export API_URL=http://localhost:8000

# ============================================
# SCRAPING SETTINGS
# ============================================
# Leave empty to manage sources via Admin UI
export SCRAPE_URLS=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
export LOG_LEVEL=INFO
export PYTHONUNBUFFERED=1

# ============================================
# USAGE
# ============================================
# Source this file before running:
#   source env.local.template
#
# Or use with python-dotenv:
#   pip install python-dotenv
#   # Add to your scripts: from dotenv import load_dotenv; load_dotenv('.env')

